{
  "id": "pulse",
  "title": {
    "en": "Set a pulse effect"
  },
  "titleFormatted": {
    "en": "Set a [[smoothness]] pulse effect with color [[color]] and a delay of [[delay]]"
  },
  "args": [
    {
      "type": "color",
      "name": "color",
      "placeholder": {
        "en": "#ff0000"
      }
    },
    {
      "type": "device",
      "name": "device",
      "filter": "driver_id=candle|rainbow|smart|sphere"
    },
    {
      "name": "smoothness",
      "title": {
        "en": "Smoothness"
      },
      "type": "dropdown",
      "default": "smooth",
      "values": [
        {
          "id": "smooth",
          "label": {
            "en": "Smooth"
          }
        },
        {
          "id": "not_smooth",
          "label": {
            "en": "Not smooth"
          }
        }
      ]
    },
    {
      "type": "range",
      "name": "delay",
      "min": 0,
      "max": 255,
      "step": 1,
      "label": "ms",
      "labelMultiplier": 1,
      "labelDecimals": 0
    }
  ]
}